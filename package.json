{
    "scripts": {
        "start": "npm run build-lib && ng serve",
        "build-lib": "cp ./README.md ./projects/ngrx-clean-forms/README.md && ng build NgrxCleanForms && rm ./projects/ngrx-clean-forms/README.md",
        "test-lib": "ng test NgrxCleanForms",
        "lint-lib": "ng lint NgrxCleanForms",
        "publish-lib": "npm publish dist/ngrx-clean-forms",
        "release-lib": "npm run lint-lib && npm run test-lib -- --watch=false && npm run build-lib && npm run publish-lib",
        "version-lib": "cd projects/ngrx-clean-forms && npm version"
    }
}
