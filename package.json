{
    "scripts": {
        "start": "npm run build-lib && ng serve",
        "build-lib": "cp ./README.md ./projects/ngrx-clean-forms/README.md && ng build NgrxCleanForms --configuration production && rm ./projects/ngrx-clean-forms/README.md",
        "test-lib": "ng test NgrxCleanForms",
        "test-lib:coverage": "npm run test-lib -- --watch=false --codeCoverage=true",
        "test-lib:publish": "npm run test-lib:coverage && npm run publish-codecov-lib",
        "lint-lib": "ng lint NgrxCleanForms",
        "publish-lib": "npm publish dist/ngrx-clean-forms",
        "release-lib": "npm run lint-lib && npm run test-lib:coverage && npm run build-lib && npm run publish-codecov-lib && npm run publish-lib",
        "version-lib": "cd projects/ngrx-clean-forms && npm version",
        "publish-codecov-lib": "codecov -t $npm_config_ngrx_clean_forms_codecov",
        "release-codecov-lib": "npm run test-lib:coverage && npm run publish-codecov-lib",
        "build-example": "npm run build-lib && ng build ExampleApp",
        "publish-example": "surge dist/ExampleApp https://example.ngrx-clean-forms.surge.sh",
        "release-example": "npm run build-example && npm run publish-example",
        "generate-toc": "toc-md README.md README.md",
        "start-docs": "cd website && docusaurus-start",
        "build-docs": "cd website && docusaurus-build ../dist/docs",
        "publish-docs": "npm run build-docs && surge website/build/ngrx-clean-forms",
        "release-docs": "npm run build-docs && npm run publish-docs https://ngrx-clean-forms.surge.sh",
        "release-all": "npm run release-codecov-lib && npm run release-example && npm run release-docs && npm run release-lib"
    },
    "dependencies": {
        "@angular/animations": "~12.0.1",
        "@angular/common": "~12.0.1",
        "@angular/compiler": "~12.0.1",
        "@angular/core": "~12.0.1",
        "@angular/forms": "~12.0.1",
        "@angular/platform-browser": "~12.0.1",
        "@angular/platform-browser-dynamic": "~12.0.1",
        "@angular/router": "~12.0.1",
        "@ngrx/store": "^12.0.0",
        "@ngrx/store-devtools": "^12.0.0",
        "fast-equals": "^2.0.0",
        "rxjs": "~6.6.6",
        "tslib": "^2.2.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~12.0.1",
        "@angular-devkit/build-ng-packagr": "~0.901.7",
        "@angular/cli": "~12.0.1",
        "@angular/compiler-cli": "~12.0.1",
        "@angular/language-service": "~12.0.1",
        "@types/jasmine": "~3.3.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^12.11.1",
        "codecov": "^3.8.2",
        "codelyzer": "^6.0.1",
        "docusaurus": "^1.14.4",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "^6.3.2",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "ng-packagr": "^12.0.0",
        "protractor": "~7.0.0",
        "ts-node": "~7.0.0",
        "tslint": "~6.1.3",
        "typescript": "~4.2.4"
    }
}
